---
/**
 * ModeCard - Card component presenting a game mode
 * Used in PropositionSection to display Karaoke, Blind Test, Quiz
 */
interface Props {
  icon: 'karaoke' | 'blindtest' | 'quiz';
  title: string;
  description: string;
  class?: string;
}

const { icon, title, description, class: className } = Astro.props;
---

<div
  class:list={[
    'bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow duration-300',
    'flex flex-col items-center text-center',
    className,
  ]}
>
  {/* Icon - SVG inline for zero JS */}
  <div class="w-16 h-16 mb-4 flex items-center justify-center text-primary-500">
    {icon === 'karaoke' && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="48"
        height="48"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z" />
        <path d="M19 10v2a7 7 0 0 1-14 0v-2" />
        <line x1="12" x2="12" y1="19" y2="22" />
      </svg>
    )}
    {icon === 'blindtest' && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="48"
        height="48"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M3 14h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-7a9 9 0 0 1 18 0v7a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3" />
      </svg>
    )}
    {icon === 'quiz' && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="48"
        height="48"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <circle cx="12" cy="12" r="10" />
        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
        <path d="M12 17h.01" />
      </svg>
    )}
  </div>

  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-muted-foreground">{description}</p>
</div>
