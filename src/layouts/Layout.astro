---
import '../styles/global.css';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import { useTranslations } from '@/i18n';

interface Props {
  title: string;
  description?: string;
  preloadHeroPoster?: boolean;
}

const { title, description = 'Karaoke landing page', preloadHeroPoster = false } = Astro.props;
const currentLocale = Astro.currentLocale || 'fr';
const t = useTranslations(currentLocale);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#3b82f6" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <!-- Google Fonts - Inter & Plus Jakarta Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@500;600;700;800&display=swap"
      rel="stylesheet"
    />

    {/* Preload hero poster for LCP optimization (NFR1: LCP < 2.5s) */}
    {preloadHeroPoster && (
      <link
        rel="preload"
        as="image"
        href="/images/hero-video-poster.webp"
        fetchpriority="high"
      />
    )}

    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col">
    <a href="#main-content" class="skip-link">{t('a11y.skipLink')}</a>
    <Header />
    <main id="main-content" class="flex-1" tabindex="-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
