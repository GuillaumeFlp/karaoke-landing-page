---
import Layout from '../../layouts/Layout.astro';
import Container from '@/components/layout/Container.astro';
import SectionWrapper from '@/components/layout/SectionWrapper.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import HeroCTA from '@/components/sections/HeroCTA.astro';
import PropositionSection from '@/components/sections/PropositionSection.astro';
import CTAFinalSection from '@/components/sections/CTAFinalSection.astro';
import { useTranslations } from '@/i18n';

const t = useTranslations(Astro.currentLocale);
---

<Layout title={t('meta.title')} description={t('meta.description')} preloadHeroPoster>
  <!-- Hero Section -->
  <HeroSection>
    <HeroCTA />
  </HeroSection>

  <!-- Value Proposition Section -->
  <PropositionSection />

  <!-- Pricing Section Placeholder -->
  <SectionWrapper id="pricing">
    <Container>
      <h2 class="mb-4 text-2xl font-semibold md:text-3xl">{t('nav.pricing')}</h2>
      <p class="text-muted-500">Pricing Section - Epic 4</p>
    </Container>
  </SectionWrapper>

  <!-- FAQ Section Placeholder -->
  <SectionWrapper variant="muted" id="faq">
    <Container>
      <h2 class="mb-4 text-2xl font-semibold md:text-3xl">{t('nav.faq')}</h2>
      <p class="text-muted-500">FAQ Section - Epic 5</p>
    </Container>
  </SectionWrapper>

  <!-- Contact Section Placeholder -->
  <SectionWrapper id="contact">
    <Container>
      <h2 class="mb-4 text-2xl font-semibold md:text-3xl">{t('nav.contact')}</h2>
      <p class="text-muted-500">Contact Section - Epic 6</p>
    </Container>
  </SectionWrapper>

  <!-- CTA Final Section -->
  <CTAFinalSection />
</Layout>
